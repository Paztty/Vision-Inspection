<UserControl x:Class="Vision_Inspection.User_controls.Model_Controls.ModelStepsROI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vision_Inspection.User_controls.Model_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#01000000">
    <Grid>
        <Image x:Name="modelImage" VerticalAlignment="Center" HorizontalAlignment="Center"
               Stretch="Uniform"/>
        <Canvas Width="{Binding ElementName=modelImage, Path=ActualWidth}"
                Height="{Binding ElementName=modelImage, Path=ActualHeight}">
        </Canvas> 
    </Grid>
</UserControl>
